            </div>
            <button class="mobile-signout" id="mobileSignOut">Sign Out</button>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Mobile menu toggle
      const mobileToggle = document.querySelector('.nav-mobile-toggle');
      const mobileMenu = document.getElementById('mobileMenu');
      const body = document.body;

      mobileToggle?.addEventListener('click', () => {
        mobileToggle.classList.toggle('active');
        mobileMenu?.classList.toggle('open');
        body.classList.toggle('menu-open');
      });

      // Close menu when clicking a link
      mobileMenu?.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileToggle?.classList.remove('active');
          mobileMenu?.classList.remove('open');
          body.classList.remove('menu-open');
        });
      });

      // Google Sign-In
      const GOOGLE_CLIENT_ID = '600326666488-o6ic9vkh9lrc6jgchimlp41eh5kn529e.apps.googleusercontent.com';

      // Decode JWT token to get user info
      function decodeJwt(token: string) {
        try {
          const base64Url = token.split('.')[1];
          const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
          const jsonPayload = decodeURIComponent(atob(base64).split('').map(c =>
            '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2)
          ).join(''));
          return JSON.parse(jsonPayload);
        } catch (e) {
          return null;
        }
      }

      // Update UI to show signed-in state
      function updateUISignedIn(user: { name: string; picture: string; email: string }) {
        // Desktop nav
        const navSignIn = document.getElementById('navSignIn') as HTMLElement;
        const navUser = document.getElementById('navUser') as HTMLElement;
        const navUserAvatar = document.getElementById('navUserAvatar') as HTMLImageElement;
        const navUserName = document.getElementById('navUserName') as HTMLElement;

        if (navSignIn) navSignIn.style.display = 'none';
        if (navUser) {
          navUser.style.display = 'flex';
          if (navUserAvatar) navUserAvatar.src = user.picture;
          if (navUserName) navUserName.textContent = user.name.split(' ')[0];
        }

        // Mobile nav
        const mobileSignIn = document.getElementById('mobileSignIn') as HTMLElement;
        const mobileUser = document.getElementById('mobileUser') as HTMLElement;
        const mobileUserAvatar = document.getElementById('mobileUserAvatar') as HTMLImageElement;
        const mobileUserName = document.getElementById('mobileUserName') as HTMLElement;

        if (mobileSignIn) mobileSignIn.style.display = 'none';
        if (mobileUser) {
          mobileUser.style.display = 'flex';
          if (mobileUserAvatar) mobileUserAvatar.src = user.picture;
          if (mobileUserName) mobileUserName.textContent = user.name;
        }
      }

      // Update UI to show signed-out state
      function updateUISignedOut() {
        // Desktop nav
        const navSignIn = document.getElementById('navSignIn') as HTMLElement;
        const navUser = document.getElementById('navUser') as HTMLElement;

        if (navSignIn) navSignIn.style.display = 'inline-flex';
        if (navUser) navUser.style.display = 'none';

        // Mobile nav
        const mobileSignIn = document.getElementById('mobileSignIn') as HTMLElement;
        const mobileUser = document.getElementById('mobileUser') as HTMLElement;

        if (mobileSignIn) mobileSignIn.style.display = 'flex';
        if (mobileUser) mobileUser.style.display = 'none';
      }

      // Handle sign out
      function handleSignOut() {
        localStorage.removeItem('user');
        localStorage.removeItem('googleCredential');
        localStorage.removeItem('userCredits');
        updateUISignedOut();

        // Revoke Google session
        if (typeof google !== 'undefined' && google.accounts) {
          google.accounts.id.disableAutoSelect();
        }
      }

      // Fetch and display credits for signed-in user
      async function fetchCredits() {
        const storedUser = localStorage.getItem('user');
        const credential = localStorage.getItem('googleCredential');
        if (!storedUser || !credential) return;

        try {
          const deviceId = localStorage.getItem('deviceId');

          const response = await fetch('https://api.transcriptmagic.com/credits', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              credential,
              deviceId
            })
          });

          if (response.ok) {
            const data = await response.json();
            // Only use credits if authenticated
            if (data.authenticated && typeof data.credits === 'number') {
              const navCreditsValue = document.getElementById('navCreditsValue');
              if (navCreditsValue) navCreditsValue.textContent = String(data.credits);
              localStorage.setItem('userCredits', String(data.credits));
            }
          }
        } catch (e) {
          console.error('Failed to fetch credits:', e);
        }
      }

      function initGoogleSignIn() {
        // Check if user is already signed in
        const storedUser = localStorage.getItem('user');
        if (storedUser) {
          try {
            const user = JSON.parse(storedUser);
            updateUISignedIn(user);
            fetchCredits();
          } catch (e) {
            localStorage.removeItem('user');
          }
        }

        if (typeof google !== 'undefined' && google.accounts) {
          google.accounts.id.initialize({
            client_id: GOOGLE_CLIENT_ID,
            callback: handleGoogleCallback,
          });
        }
      }

      function handleGoogleCallback(response: any) {
        const payload = decodeJwt(response.credential);
        if (payload) {
          const user = {
            name: payload.name,
            email: payload.email,
            picture: payload.picture,
          };

          // Store user info and credential
          localStorage.setItem('user', JSON.stringify(user));
          localStorage.setItem('googleCredential', response.credential);

          // Update UI
          updateUISignedIn(user);

          // Redirect to dashboard after sign-in
          window.location.href = '/dashboard';
        }
      }

      function promptGoogleSignIn() {
        if (typeof google !== 'undefined' && google.accounts) {
          google.accounts.id.prompt();
        } else {
          alert('Google Sign-In is loading. Please try again.');
        }
      }

      // Initialize on load
      window.addEventListener('load', initGoogleSignIn);

      // Attach click handlers
      document.getElementById('navSignIn')?.addEventListener('click', promptGoogleSignIn);
      document.getElementById('mobileSignIn')?.addEventListener('click', promptGoogleSignIn);
      document.getElementById('navSignOut')?.addEventListener('click', handleSignOut);
      document.getElementById('mobileSignOut')?.addEventListener('click', handleSignOut);
    </script>

