---
import Layout from '../layouts/Layout.astro';
import DownloadForm from '../components/DownloadForm';
---

<Layout title="TranscriptMagic - AI Transcripts for YouTube, TikTok & Instagram" description="Get accurate transcripts from YouTube videos, TikTok clips, and Instagram Reels. AI-powered transcription with timestamps. Copy text or download SRT files.">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg">
      <div class="hero-gradient"></div>
      <div class="hero-grid"></div>
      <div class="hero-orb hero-orb-1"></div>
      <div class="hero-orb hero-orb-2"></div>
    </div>

    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">
          <span class="badge-dot"></span>
          <span>AI-powered video transcription</span>
        </div>

        <h1 class="hero-title">
          Get Video Transcripts
          <span class="title-highlight">In Seconds</span>
        </h1>

        <p class="hero-subtitle">
          Extract accurate transcripts from YouTube, TikTok, and Instagram videos.
          AI-powered transcription with timestamps — copy text or download SRT files.
        </p>

        <div class="hero-form">
          <DownloadForm client:only="react" />
        </div>

        <div class="hero-stats">
          <div class="stat">
            <span class="stat-value">3</span>
            <span class="stat-label">Platforms supported</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-value">10</span>
            <span class="stat-label">Free transcripts</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-value">SRT</span>
            <span class="stat-label">Export format</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features" id="features">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">Features</span>
        <h2>AI-Powered Video Transcription</h2>
        <p>Get accurate transcripts from your favorite platforms. Fast, reliable, and easy to use.</p>
      </div>

      <div class="features-grid">
        <div class="feature-card feature-card-highlight">
          <div class="feature-icon-wrap">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="m9 12 2 2 4-4"/>
            </svg>
          </div>
          <h3>Multi-Platform Support</h3>
          <p>Get transcripts from YouTube videos, TikTok clips, and Instagram Reels — all from one place.</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon-wrap">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
            </svg>
          </div>
          <h3>Instant Results</h3>
          <p>Get your transcript in seconds. Paste a URL, click transcribe, and copy the text immediately.</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon-wrap">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
          </div>
          <h3>Timestamps Included</h3>
          <p>Every transcript comes with precise timestamps. Perfect for creating subtitles or referencing specific moments.</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon-wrap">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7,10 12,15 17,10"/>
              <line x1="12" x2="12" y1="15" y2="3"/>
            </svg>
          </div>
          <h3>SRT Export</h3>
          <p>Download transcripts as SRT files for video editing. Works with Premiere Pro, Final Cut, and more.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="how-it-works" id="how-it-works">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">How it works</span>
        <h2>Get Transcripts in 3 Steps</h2>
        <p>Extract text from any video in seconds. It's that simple.</p>
      </div>

      <div class="steps-container">
        <div class="steps-line"></div>

        <div class="step">
          <div class="step-number">
            <span>1</span>
          </div>
          <div class="step-content">
            <h3>Copy the Video URL</h3>
            <p>Copy the link to any YouTube, TikTok, or Instagram video you want to transcribe.</p>
          </div>
        </div>

        <div class="step">
          <div class="step-number">
            <span>2</span>
          </div>
          <div class="step-content">
            <h3>Paste & Transcribe</h3>
            <p>Paste the URL above and click the transcribe button to extract the text.</p>
          </div>
        </div>

        <div class="step">
          <div class="step-number">
            <span>3</span>
          </div>
          <div class="step-content">
            <h3>Copy or Download</h3>
            <p>Copy the transcript to your clipboard or download it as an SRT file.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Extension CTA Section -->
  <section class="extension-cta" id="extension">
    <div class="container">
      <div class="extension-card">
        <div class="extension-bg">
          <div class="extension-pattern"></div>
        </div>

        <div class="extension-content">
          <div class="extension-badge">
            <svg viewBox="0 0 24 24" fill="currentColor" width="16" height="16">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
            </svg>
            <span>Chrome Extensions</span>
          </div>

          <h2>One-Click Transcripts</h2>
          <p>Get transcripts even faster with our Chrome extensions. Available for YouTube, TikTok, and Instagram — transcribe any video with a single click.</p>

          <div class="extension-buttons">
            <a href="/extension" class="btn btn-primary">
              <svg viewBox="0 0 20 20" fill="currentColor" width="18" height="18">
                <path d="M10.75 2.75a.75.75 0 00-1.5 0v8.614L6.295 8.235a.75.75 0 10-1.09 1.03l4.25 4.5a.75.75 0 001.09 0l4.25-4.5a.75.75 0 00-1.09-1.03l-2.955 3.129V2.75z"/>
                <path d="M3.5 12.75a.75.75 0 00-1.5 0v2.5A2.75 2.75 0 004.75 18h10.5A2.75 2.75 0 0018 15.25v-2.5a.75.75 0 00-1.5 0v2.5c0 .69-.56 1.25-1.25 1.25H4.75c-.69 0-1.25-.56-1.25-1.25v-2.5z"/>
              </svg>
              Get Free Extensions
            </a>
            <span class="extension-note">Free to install</span>
          </div>
        </div>

        <div class="extension-visual">
          <div class="browser-mockup">
            <div class="browser-bar">
              <div class="browser-dots">
                <span></span>
                <span></span>
                <span></span>
              </div>
              <div class="browser-address">youtube.com</div>
            </div>
            <div class="browser-content">
              <div class="mockup-video">
                <div class="mockup-overlay">
                  <div class="download-button-mockup">
                    <svg viewBox="0 0 20 20" fill="currentColor" width="14" height="14">
                      <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 6a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1v-2zm0 6a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1v-2z"/>
                    </svg>
                    Transcript
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq" id="faq">
    <div class="container">
      <div class="section-header">
        <span class="section-tag">FAQ</span>
        <h2>Frequently Asked Questions</h2>
        <p>Everything you need to know about TranscriptMagic.</p>
      </div>

      <div class="faq-grid">
        <div class="faq-item">
          <h3>What platforms are supported?</h3>
          <p>TranscriptMagic works with YouTube videos, TikTok clips, and Instagram Reels. Just paste any video URL and get the transcript instantly.</p>
        </div>

        <div class="faq-item">
          <h3>Is TranscriptMagic free?</h3>
          <p>You get 10 free transcripts to start. After that, you can purchase credit packs starting at $4.99 for additional transcripts.</p>
        </div>

        <div class="faq-item">
          <h3>Are timestamps included?</h3>
          <p>Yes! Every transcript includes precise timestamps. You can copy the text with or without timestamps, or download as an SRT file for video editing.</p>
        </div>

        <div class="faq-item">
          <h3>How accurate are the transcripts?</h3>
          <p>We use advanced AI transcription that provides highly accurate results. The quality depends on the audio clarity of the original video.</p>
        </div>

        <div class="faq-item">
          <h3>What file formats can I export?</h3>
          <p>You can copy transcripts as plain text or with timestamps. For video editors, we offer SRT file downloads compatible with all major editing software.</p>
        </div>

        <div class="faq-item">
          <h3>Do I need to install anything?</h3>
          <p>No installation required for the web app. For faster transcription, try our free Chrome extensions for YouTube, TikTok, and Instagram.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="final-cta">
    <div class="container">
      <h2>Ready to Get Started?</h2>
      <p>Start transcribing your favorite videos. 10 free transcripts included.</p>
      <a href="/download" class="btn btn-primary btn-lg">
        Transcribe a Video Now
        <svg viewBox="0 0 20 20" fill="currentColor" width="18" height="18">
          <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd"/>
        </svg>
      </a>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    padding: 5rem 0 6rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-gradient {
    position: absolute;
    top: -50%;
    left: -25%;
    width: 150%;
    height: 200%;
    background: radial-gradient(ellipse at 30% 20%, rgba(6, 182, 212, 0.08) 0%, transparent 50%),
                radial-gradient(ellipse at 70% 80%, rgba(249, 115, 22, 0.05) 0%, transparent 40%);
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(15, 23, 42, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(15, 23, 42, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at 50% 50%, black 20%, transparent 70%);
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .hero-orb-1 {
    top: 10%;
    right: 10%;
    width: 300px;
    height: 300px;
    background: var(--cyan-400);
  }

  .hero-orb-2 {
    bottom: 20%;
    left: 5%;
    width: 200px;
    height: 200px;
    background: var(--coral-400);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 720px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--primary-muted);
    color: var(--cyan-600);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    background: var(--primary);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.25rem;
    letter-spacing: -0.03em;
  }

  .title-highlight {
    display: block;
    background: linear-gradient(135deg, var(--cyan-500) 0%, var(--cyan-400) 50%, var(--coral-500) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 540px;
    margin: 0 auto 2.5rem;
  }

  .hero-form {
    max-width: 560px;
    margin: 0 auto 3rem;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--slate-900);
    letter-spacing: -0.02em;
  }

  .stat-label {
    font-size: 0.8125rem;
    color: var(--text-muted);
  }

  .stat-divider {
    width: 1px;
    height: 32px;
    background: var(--border);
  }

  /* Section Headers */
  .section-header {
    text-align: center;
    max-width: 560px;
    margin: 0 auto 4rem;
  }

  .section-tag {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--primary);
    margin-bottom: 0.75rem;
  }

  .section-header h2 {
    font-size: 2.25rem;
    margin-bottom: 0.75rem;
  }

  .section-header p {
    font-size: 1.0625rem;
    color: var(--text-secondary);
  }

  /* Features */
  .features {
    padding: 6rem 0;
    background: var(--background-secondary);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .feature-card {
    background: white;
    padding: 2rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-subtle);
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: transparent;
  }

  .feature-card-highlight {
    background: var(--slate-900);
    color: white;
    border-color: transparent;
  }

  .feature-card-highlight p {
    color: var(--slate-300);
  }

  .feature-icon-wrap {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary-muted);
    border-radius: var(--radius-md);
    margin-bottom: 1.25rem;
  }

  .feature-icon-wrap svg {
    width: 24px;
    height: 24px;
    color: var(--primary);
  }

  .feature-card-highlight .feature-icon-wrap {
    background: rgba(6, 182, 212, 0.2);
  }

  .feature-card h3 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
    font-family: var(--font-display);
  }

  .feature-card p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* How it Works */
  .how-it-works {
    padding: 6rem 0;
  }

  .steps-container {
    display: flex;
    justify-content: center;
    gap: 4rem;
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  .steps-line {
    position: absolute;
    top: 28px;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 2px;
    background: linear-gradient(90deg, var(--primary), var(--coral-500));
    opacity: 0.3;
  }

  .step {
    flex: 1;
    text-align: center;
    position: relative;
  }

  .step-number {
    width: 56px;
    height: 56px;
    margin: 0 auto 1.5rem;
    background: white;
    border: 2px solid var(--border);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
    transition: all 0.3s ease;
  }

  .step:hover .step-number {
    border-color: var(--primary);
    background: var(--primary);
    transform: scale(1.1);
  }

  .step-number span {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--slate-900);
    transition: color 0.3s ease;
  }

  .step:hover .step-number span {
    color: white;
  }

  .step-content h3 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }

  .step-content p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    max-width: 220px;
    margin: 0 auto;
  }

  /* Extension CTA */
  .extension-cta {
    padding: 6rem 0;
    background: var(--background-secondary);
  }

  .extension-card {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    background: var(--slate-900);
    border-radius: var(--radius-xl);
    padding: 4rem;
    overflow: hidden;
  }

  .extension-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .extension-pattern {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--cyan-500) 0%, transparent 60%);
    opacity: 0.1;
  }

  .extension-content {
    position: relative;
    z-index: 1;
  }

  .extension-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(6, 182, 212, 0.15);
    color: var(--cyan-400);
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.8125rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .extension-content h2 {
    color: white;
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .extension-content p {
    color: var(--slate-300);
    font-size: 1.0625rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    max-width: 400px;
  }

  .extension-buttons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .extension-note {
    font-size: 0.8125rem;
    color: var(--slate-400);
  }

  .extension-visual {
    position: relative;
    z-index: 1;
  }

  .browser-mockup {
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .browser-bar {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
    background: var(--slate-100);
    border-bottom: 1px solid var(--border);
  }

  .browser-dots {
    display: flex;
    gap: 6px;
  }

  .browser-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--slate-300);
  }

  .browser-dots span:first-child { background: #ff5f57; }
  .browser-dots span:nth-child(2) { background: #ffbd2e; }
  .browser-dots span:nth-child(3) { background: #28ca42; }

  .browser-address {
    flex: 1;
    background: white;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.8125rem;
    color: var(--slate-500);
  }

  .browser-content {
    padding: 1.5rem;
    background: var(--slate-50);
  }

  .mockup-video {
    aspect-ratio: 16/9;
    background: linear-gradient(135deg, var(--slate-200) 0%, var(--slate-300) 100%);
    border-radius: var(--radius-md);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mockup-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    padding: 1rem;
  }

  .download-button-mockup {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    background: var(--accent);
    color: white;
    padding: 0.5rem 0.875rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    animation: bounceIn 0.5s ease 1s backwards;
  }

  @keyframes bounceIn {
    0% { transform: scale(0); opacity: 0; }
    60% { transform: scale(1.1); }
    100% { transform: scale(1); opacity: 1; }
  }

  /* FAQ Section */
  .faq {
    padding: 6rem 0;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .faq-item {
    background: var(--background-secondary);
    padding: 1.75rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-subtle);
  }

  .faq-item h3 {
    font-size: 1rem;
    font-family: var(--font-display);
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .faq-item p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Final CTA */
  .final-cta {
    padding: 6rem 0;
    text-align: center;
    background: var(--background-secondary);
  }

  .final-cta h2 {
    font-size: 2.25rem;
    margin-bottom: 0.75rem;
  }

  .final-cta p {
