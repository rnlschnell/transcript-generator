---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Credits - TranscriptMagic" description="Simple, transparent pricing. Start free, upgrade when you need more.">
  <!-- Hero -->
  <section class="credits-hero">
    <div class="container">
      <span class="section-tag">Pricing</span>
      <h1>Simple credit-based pricing</h1>
      <p>Start with 10 free transcripts. Buy more credits when you need them.</p>
    </div>
  </section>

  <!-- Plans -->
  <section class="credits-plans">
    <div class="container">
      <div class="plans-grid">
        <!-- 200 Credits -->
        <div class="plan-card">
          <div class="plan-header">
            <span class="plan-name">200 Credits</span>
            <div class="plan-price">
              <span class="price-amount">$8.99</span>
            </div>
          </div>

          <ul class="plan-features">
