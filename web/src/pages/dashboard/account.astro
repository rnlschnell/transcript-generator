---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Account" activeSection="account">
  <div class="dashboard-page">
    <div class="page-header">
      <h1 class="dashboard-title">Account Settings</h1>
      <p class="dashboard-subtitle">Manage your account and credits</p>
    </div>

    <!-- User Profile Card -->
    <div class="profile-card dashboard-card">
      <div class="profile-info" id="profileInfo">
        <img class="profile-avatar" id="profileAvatar" src="" alt="Profile" />
        <div class="profile-details">
          <h2 class="profile-name" id="profileName">Loading...</h2>
          <p class="profile-email" id="profileEmail"></p>
        </div>
      </div>
    </div>

    <!-- Credits Card -->
    <div class="credits-card dashboard-card">
      <div class="credits-header">
        <h3>Credit Balance</h3>
        <div class="credits-badge" id="creditsBadge">
          <span class="credits-amount" id="creditsAmount">--</span>
          <span class="credits-label">credits</span>
        </div>
      </div>
      <p class="credits-info">Each transcript uses 1 credit. Purchase more credits below.</p>

      <div class="pricing-grid">
        <div class="pricing-option">
          <div class="pricing-amount">200</div>
          <div class="pricing-label">credits</div>
          <div class="pricing-price">$8.99</div>
          <button class="pricing-btn" data-credits="200" data-price="8.99">Buy Now</button>
        </div>
        <div class="pricing-option featured">
          <div class="pricing-badge">Popular</div>
          <div class="pricing-amount">500</div>
          <div class="pricing-label">credits</div>
          <div class="pricing-price">$13.99</div>
          <div class="pricing-savings">Save 44%</div>
          <button class="pricing-btn primary" data-credits="500" data-price="13.99">Buy Now</button>
        </div>
        <div class="pricing-option">
          <div class="pricing-amount">1000</div>
          <div class="pricing-label">credits</div>
          <div class="pricing-price">$21.99</div>
          <div class="pricing-savings">Save 51%</div>
          <button class="pricing-btn" data-credits="1000" data-price="21.99">Buy Now</button>
        </div>
      </div>
    </div>

    <!-- Sign Out -->
    <div class="danger-zone">
      <button class="signout-btn" id="accountSignOut">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
          <polyline points="16 17 21 12 16 7"></polyline>
          <line x1="21" y1="12" x2="9" y2="12"></line>
        </svg>
        Sign Out
      </button>
    </div>
  </div>
</DashboardLayout>

<script>
  // Load user profile
  function loadProfile() {
    const storedUser = localStorage.getItem('user');
    if (!storedUser) return;

    try {
      const user = JSON.parse(storedUser);
      const avatar = document.getElementById('profileAvatar') as HTMLImageElement;
      const name = document.getElementById('profileName');
      const email = document.getElementById('profileEmail');

      if (avatar) avatar.src = user.picture;
      if (name) name.textContent = user.name;
      if (email) email.textContent = user.email;
    } catch (e) {
      console.error('Failed to load profile:', e);
    }
  }

  // Load credits
  async function loadCredits() {
    const storedUser = localStorage.getItem('user');
    const credential = localStorage.getItem('googleCredential');
    if (!storedUser || !credential) return;

    try {
      const deviceId = localStorage.getItem('deviceId');

      const response = await fetch('https://api.transcriptmagic.com/credits', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ credential, deviceId })
      });

      if (response.ok) {
        const data = await response.json();
        // Only use credits if authenticated
        if (data.authenticated && typeof data.credits === 'number') {
          const creditsAmount = document.getElementById('creditsAmount');
          if (creditsAmount) creditsAmount.textContent = String(data.credits);
        }
      }
    } catch (e) {
      console.error('Failed to load credits:', e);
    }
  }

  // Handle purchase button clicks
  function initPurchaseButtons() {
    document.querySelectorAll('.pricing-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const credits = btn.getAttribute('data-credits');

        const credential = localStorage.getItem('googleCredential');
        if (!credential) {
          alert('Please sign in to purchase credits');
          return;
        }

        try {
          // Create checkout session
          const response = await fetch('https://api.transcriptmagic.com/checkout', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              credential,
              credits: credits
            })
          });

          if (response.ok) {
            const data = await response.json();
            if (data.url) {
              window.location.href = data.url;
            } else {
              alert('Checkout is coming soon!');
            }
          } else {
            alert('Failed to create checkout. Please try again.');
          }
        } catch (e) {
          console.error('Checkout error:', e);
          alert('Failed to create checkout. Please try again.');
        }
      });
    });
  }

  // Handle sign out
  function initSignOut() {
    document.getElementById('accountSignOut')?.addEventListener('click', () => {
      localStorage.removeItem('user');
      localStorage.removeItem('userCredits');

      if (typeof google !== 'undefined' && google.accounts) {
        google.accounts.id.disableAutoSelect();
      }

      window.location.href = '/';
    });
  }

  // Initialize on load
  window.addEventListener('load', () => {
    loadProfile();
    loadCredits();
    initPurchaseButtons();
    initSignOut();
  });
</script>

<style>
  .dashboard-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .dashboard-title {
    font-size: 1.75rem;
    margin-bottom: 0.25rem;
  }

  .dashboard-subtitle {
    color: var(--text-secondary);
    font-size: 0.9375rem;
  }

  .dashboard-card {
    background: var(--background);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: var(--shadow-sm);
    margin-bottom: 1.5rem;
  }

  /* Profile Card */
  .profile-info {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .profile-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    border: 3px solid var(--border);
  }

  .profile-name {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .profile-email {
    color: var(--text-secondary);
    font-size: 0.9375rem;
  }

  /* Credits Card */
  .credits-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .credits-header h3 {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
  }

  .credits-badge {
    display: flex;
    align-items: baseline;
    gap: 0.375rem;
    background: var(--primary-muted);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
  }

  .credits-amount {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
  }

  .credits-label {
    font-size: 0.875rem;
    color: var(--primary);
  }

  .credits-info {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    margin-bottom: 2rem;
  }

  /* Pricing Grid */
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .pricing-option {
    position: relative;
    background: var(--background-secondary);
    border: 2px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-align: center;
    transition: all 0.2s ease;
  }

  .pricing-option:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-md);
  }

  .pricing-option.featured {
    border-color: var(--primary);
    background: var(--primary-muted);
  }

  .pricing-badge {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--primary);
    color: white;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
  }

  .pricing-amount {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .pricing-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .pricing-price {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .pricing-savings {
    font-size: 0.75rem;
    color: var(--success);
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .pricing-btn {
    width: 100%;
    padding: 0.625rem 1rem;
    background: white;
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
    cursor: pointer;
    font-family: inherit;
    transition: all 0.2s ease;
    margin-top: 0.75rem;
  }

  .pricing-btn:hover {
    background: var(--background-secondary);
    border-color: var(--slate-300);
  }

  .pricing-btn.primary {
    background: var(--primary);
    border-color: var(--primary);
    color: white;
  }

  .pricing-btn.primary:hover {
    background: var(--primary-hover);
  }

  /* Danger Zone */
  .danger-zone {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .signout-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: white;
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text-secondary);
    cursor: pointer;
    font-family: inherit;
    transition: all 0.2s ease;
  }

  .signout-btn:hover {
    background: #fef2f2;
    border-color: #fecaca;
    color: #dc2626;
  }

  @media (max-width: 768px) {
    .dashboard-card {
      padding: 1.5rem;
    }

    .pricing-grid {
      grid-template-columns: 1fr;
    }

    .profile-info {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
