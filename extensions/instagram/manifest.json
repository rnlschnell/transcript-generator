{
  "manifest_version": 3,
  "name": "Instagram Transcript",
  "description": "Get transcripts from Instagram reels. Copy text or download as file.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "downloads",
    "activeTab",
    "tabs",
    "clipboardWrite",
    "storage"
  ]
}
